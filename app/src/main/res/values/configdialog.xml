<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Settings dialog fragment style -->
    <style name="FullScreenPlayerSettingsDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/playersettings_window_transparency_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="android:windowExitAnimation">@anim/out_to_right</item>
    </style>

    <!-- Width ratio in percent, from right -->
    <integer name="playersettings_dialog_width_ratio">45</integer>
    <integer name="playersettings_dialog_dim_ratio">20</integer>

    <color name="playersettings_window_transparency_background">#A8000000</color>

</resources>