<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <FrameLayout
            android:id="@+id/rewindFrameLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/yt_rewind_view"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/yt_rewind_ripple"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/forwardFrameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            >

        <TextView
                android:id="@+id/tvRewind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:drawableTop="@drawable/ic_rewind_animation_05"
                tools:text="20 Sekunden"
                />


    </FrameLayout>

    <FrameLayout
            android:id="@+id/forwardFrameLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:background="@drawable/yt_forward_view"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/yt_forward_ripple"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rewindFrameLayout"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            >

        <TextView
                android:id="@+id/tvForward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:drawableTop="@drawable/ic_forward_animation_08"
                tools:text="40 Sekunden"
                />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>